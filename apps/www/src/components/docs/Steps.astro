---
interface Props {
  numbered?: boolean;
}

const { numbered = true } = Astro.props;
---

<div class="steps" data-numbered={numbered.toString()}>
  <slot />
</div>

<style is:global>
  .steps {
    counter-reset: step-counter;
    margin: 1.25rem 0;
  }

  .steps > div {
    position: relative;
    padding-left: 2.25rem;
    padding-bottom: 1.5rem;
  }

  .steps > div:last-child {
    padding-bottom: 0;
  }

  /* Vertical line */
  .steps > div::after {
    content: "";
    position: absolute;
    left: 0.5625rem;
    top: 1.5rem;
    bottom: 0;
    width: 1px;
    background: var(--border);
  }

  .steps > div:last-child::after {
    display: none;
  }

  /* Step number */
  .steps[data-numbered="true"] > div::before {
    counter-increment: step-counter;
    content: counter(step-counter);
    position: absolute;
    left: 0;
    top: 0;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 9999px;
    background: var(--primary);
    color: var(--primary-foreground);
    font-size: 0.6875rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-mono);
  }

  /* Bullet point for non-numbered */
  .steps[data-numbered="false"] > div::before {
    content: "";
    position: absolute;
    left: 0.375rem;
    top: 0.375rem;
    width: 0.375rem;
    height: 0.375rem;
    border-radius: 9999px;
    background: var(--primary);
  }

  /* Step content styling */
  .steps > div > h3:first-child {
    margin-top: 0 !important;
    margin-bottom: 0.375rem !important;
    font-size: 0.9375rem !important;
  }

  .steps > div > p:first-child,
  .steps > div > h3:first-child + p {
    margin-top: 0;
  }

  .steps .code-block {
    margin-top: 0.625rem;
    margin-bottom: 0;
  }
</style>
