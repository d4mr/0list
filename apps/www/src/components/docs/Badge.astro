---
interface Props {
  variant?: 'get' | 'post' | 'put' | 'delete' | 'patch' | 'default';
}

const { variant = 'default' } = Astro.props;

const styles: Record<string, { bg: string; text: string }> = {
  get: { bg: 'rgba(59, 130, 246, 0.15)', text: '#60a5fa' },
  post: { bg: 'rgba(34, 197, 94, 0.15)', text: '#4ade80' },
  put: { bg: 'rgba(234, 179, 8, 0.15)', text: '#facc15' },
  patch: { bg: 'rgba(168, 85, 247, 0.15)', text: '#c084fc' },
  delete: { bg: 'rgba(239, 68, 68, 0.15)', text: '#f87171' },
  default: { bg: 'var(--muted)', text: 'var(--muted-foreground)' }
};

const style = styles[variant] || styles.default;
---

<span class="badge" style={`background: ${style.bg}; color: ${style.text};`}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.375rem;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
    border-radius: 0.25rem;
  }
</style>
