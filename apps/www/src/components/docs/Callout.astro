---
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'danger';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const config = {
  info: {
    bg: 'rgba(59, 130, 246, 0.08)',
    border: 'rgba(59, 130, 246, 0.2)',
    iconColor: '#3b82f6',
    titleColor: '#3b82f6',
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
    defaultTitle: 'Note'
  },
  warning: {
    bg: 'rgba(234, 179, 8, 0.08)',
    border: 'rgba(234, 179, 8, 0.2)',
    iconColor: '#eab308',
    titleColor: '#eab308',
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>`,
    defaultTitle: 'Warning'
  },
  tip: {
    bg: 'rgba(251, 146, 60, 0.08)',
    border: 'rgba(251, 146, 60, 0.2)',
    iconColor: '#fb923c',
    titleColor: '#fb923c',
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>`,
    defaultTitle: 'Tip'
  },
  danger: {
    bg: 'rgba(239, 68, 68, 0.08)',
    border: 'rgba(239, 68, 68, 0.2)',
    iconColor: '#ef4444',
    titleColor: '#ef4444',
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>`,
    defaultTitle: 'Danger'
  }
};

const c = config[type];
const displayTitle = title || c.defaultTitle;
---

<div class="callout" style={`--callout-bg: ${c.bg}; --callout-border: ${c.border}; --callout-icon: ${c.iconColor}; --callout-title: ${c.titleColor};`}>
  <div class="callout-icon" set:html={c.icon} />
  <div class="callout-content">
    {displayTitle && <strong class="callout-title">{displayTitle}</strong>}
    <div class="callout-body">
      <slot />
    </div>
  </div>
</div>

<style>
  .callout {
    display: flex;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--callout-bg);
    border: 1px solid var(--callout-border);
    border-radius: 0.5rem;
    margin: 1.25rem 0;
  }

  .callout-icon {
    flex-shrink: 0;
    width: 1rem;
    height: 1rem;
    color: var(--callout-icon);
    margin-top: 0.0625rem;
  }

  .callout-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .callout-content {
    flex: 1;
    min-width: 0;
  }

  .callout-title {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--callout-title);
    margin-bottom: 0.125rem;
  }

  .callout-body {
    font-size: 0.875rem;
    color: var(--muted-foreground);
    line-height: 1.5;
  }

  .callout-body :global(p) {
    margin: 0;
  }

  .callout-body :global(a) {
    color: var(--callout-title);
    text-decoration: none;
  }

  .callout-body :global(a:hover) {
    text-decoration: underline;
  }

  .callout-body :global(code) {
    font-size: 0.75rem;
  }
</style>
