---
import { Code } from 'astro:components';

interface Props {
  code: string;
  lang?: string;
  title?: string;
}

const { code, lang = 'typescript', title } = Astro.props;
---

<div class="code-block-wrapper">
  {title && (
    <div class="code-block-header">
      <div class="code-block-dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <span class="code-block-title">{title}</span>
    </div>
  )}
  <div class="code-block-content">
    <Code code={code} lang={lang} theme="github-dark" />
  </div>
</div>

<style>
  .code-block-wrapper {
    margin: 1.25rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
    background: #0d1117;
    border: 1px solid var(--border);
  }

  .code-block-header {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.5rem 0.875rem;
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid var(--border);
  }

  .code-block-dots {
    display: flex;
    gap: 0.3rem;
  }

  .code-block-dots span {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
    background: var(--border);
  }

  .code-block-title {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--muted-foreground);
  }

  .code-block-content :global(pre) {
    margin: 0;
    padding: 0.75rem 1rem;
    background: transparent !important;
    overflow-x: auto;
  }

  .code-block-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    line-height: 1.6;
  }

  /* Remove border radius from shiki if present */
  .code-block-content :global(.astro-code) {
    border-radius: 0;
    border: none;
  }
</style>
